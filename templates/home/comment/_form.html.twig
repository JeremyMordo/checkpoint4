{% form_theme form 'bootstrap_4_layout.html.twig' %}
<div class="group-form col-10">
{{ form_start(form) }}
    <div class="custom_errors">
        {{ form_errors(form) }}
    </div>
    <div class="label-form">
        <div class="col d-flex align-items-center">
            <div class="col-6 col-12-sm">
                {{ form_row(form.description) }}
            </div>
            <div class="col-6 col-12-sm">
                {{ form_row(form.grade) }}
            </div>
        </div>
    </div>
    <div class="row col-12 d-flex justify-content-center align-items-center m-0">
            <button class="btn btn-lg btn-primary my-3 underline" type="submit">
                Valider votre message
            </button>
    </div>
{{ form_end(form) }}
</div>